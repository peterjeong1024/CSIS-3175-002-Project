<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/tv_own_booklist_add_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_layout_height"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/list_add_new_book"
        android:textSize="@dimen/list_add_book_btn_text_size"
        android:textColor="@color/black"
        android:background="@color/gray_400"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ListView
        android:id="@+id/listview_own_booklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="2dp"
        android:divider="@color/gray_600"
        android:clickable="true"
        android:contextClickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_own_booklist_add_btn"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>